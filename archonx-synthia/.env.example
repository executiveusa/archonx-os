# ── Orgo (Computer-Use) ──────────────────────────────────
ORGO_API_KEY=

# ── GLM-5 (Z.ai) ────────────────────────────────────────
ZAI_API_KEY=

# ── Notion ───────────────────────────────────────────────
NOTION_TOKEN=
NOTION_TASKS_DB_ID=
NOTION_RUNS_DB_ID=
NOTION_ARTIFACTS_DB_ID=
NOTION_APPROVALS_DB_ID=
NOTION_PROFILES_DB_ID=
NOTION_AGENTS_DB_ID=
NOTION_SOPS_DB_ID=

# ── Twilio (Voice MVP) ──────────────────────────────────
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_NUMBER=

# ── Public URL (webhook base) ────────────────────────────
BASE_URL=http://localhost:8000

# ── Control Tower ────────────────────────────────────────
NEXT_PUBLIC_API_URL=http://localhost:8000

# ── Code Runner ──────────────────────────────────────────
RUNNER_PORT=9000
RUNNER_MAX_RUNTIME_SECONDS=300
RUNNER_MEMORY_LIMIT=512m
RUNNER_CPU_LIMIT=1.0

# ── Egress Proxy (optional) ─────────────────────────────
PROXY_ALLOWLIST=api.notion.com,api.orgo.ai,api.z.ai,api.twilio.com

# ── Logging ──────────────────────────────────────────────
LOG_LEVEL=info
LOG_FORMAT=json

# ── Agent Budgets ────────────────────────────────────────
MAX_STEPS_PER_TASK=40
MAX_TOOL_CALLS_PER_TASK=80
MAX_RUNTIME_MINUTES_PER_TASK=30

# ── Additional Platform Credentials ─────────────────────
