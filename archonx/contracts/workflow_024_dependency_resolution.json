{
  "workflow_id": "WF-024",
  "name": "Dependency Resolution",
  "category": "orchestration",
  "version": "1.0.0",
  "description": "Resolves inter-bead and inter-agent dependencies before execution begins.",
  "trigger": {
    "event": "dependency_resolution_requested",
    "condition": "bead_with_dependencies_detected",
    "actor": "operator"
  },
  "payload_schema": {
    "type": "object",
    "required": ["bead_id", "dependencies"],
    "properties": {
      "bead_id": { "type": "string" },
      "dependencies": { "type": "array", "items": { "type": "string" } },
      "resolution_strategy": { "type": "string", "enum": ["eager", "lazy", "parallel"] }
    }
  },
  "policy_gates": {
    "required_role": "operator",
    "compliance_level": "PAULIWHEEL_MEDIUM",
    "approval_required": false
  },
  "telemetry": {
    "event_name": "dependencies_resolved",
    "fields": ["bead_id", "resolved_count", "unresolved_count", "timestamp"]
  },
  "evidence_path": "ops/reports/dependency_resolution/",
  "success_criteria": [
    "all declared dependencies resolved",
    "no circular dependency detected",
    "resolution order recorded"
  ],
  "timeout_seconds": 900
}
