{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "ArchonX Secrets JSON Upload",
  "type": "object",
  "required": ["name", "payload"],
  "additionalProperties": false,
  "properties": {
    "name": {
      "type": "string",
      "minLength": 3,
      "maxLength": 120,
      "pattern": "^[a-zA-Z0-9._-]+$"
    },
    "payload": {
      "type": "object",
      "minProperties": 1,
      "additionalProperties": {
        "type": "string",
        "minLength": 1,
        "maxLength": 4096
      }
    },
    "metadata": {
      "type": "object",
      "additionalProperties": {
        "type": "string",
        "maxLength": 1024
      }
    }
  }
}
